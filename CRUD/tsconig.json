{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": false,
		"target": "es2020",
		"module": "commonjs",
		"strict": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}