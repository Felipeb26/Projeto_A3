			}
		},
		"schemas": {
			"Login": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"email": { "type": "string" }
				}
			},
			"Users": {
				"type": "object",
				"properties": {
					"name": {"type": "string" },
					"email": { "type": "string" },
					"agenda ": { "type": "string", "format": "date-time" },
					"senha": { "type": "string", "format": "password" },
					"role": { "type": "number" }
				}
			}
		}
